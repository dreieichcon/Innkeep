@using Innkeep.Core.Interfaces.Services
@using Innkeep.Client.Interfaces.Services
@inject ITransactionService TransactionService;
@inject IServerConnectionService ServerConnectionService;

<div class="sales-item no-select" @onclick="AddToTransaction">
    <div class="sales-image-wrapper">
        <img class="sales-image drop2" src="@Src"/>
    </div>
    <div class="sales-item-spacer"></div>
    <div class="sales-price-wrapper">
        <div class="sales-price">
            @Amount&nbsp;@ServerConnectionService.CurrentEvent?.Currency
        </div>
    </div>
    
</div>

@code {
    
    [Parameter]
    public decimal Amount { get; set; }

    private string Src => $"img/money/{Amount}{ServerConnectionService.CurrentEvent?.Currency}.png";

    private void AddToTransaction()
    {
        TransactionService.UpdateGivenAmount(Amount);
    }
    
}