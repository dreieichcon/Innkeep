@inherits ComponentBase


@code {

    protected Action? CancelAction { get; set; }

    protected Action? ConfirmAction { get; set; }
    
    private bool IsVisible { get; set; }
    
    protected string VisibilityClass => IsVisible ? "visibility: visible" : "visibility: hidden";
    
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    protected void Confirm()
    {
        ConfirmAction?.Invoke();
        Close();
    }

    protected void Cancel()
    {
        CancelAction?.Invoke();
        Close();
    }

    private void Close()
    {
        IsVisible = false;
        InvokeAsync(StateHasChanged);
    }

    protected void Show()
    {
        IsVisible = true;
        InvokeAsync(StateHasChanged);
    }
}