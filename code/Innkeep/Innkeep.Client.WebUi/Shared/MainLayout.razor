@using MudBlazor.Utilities
@inherits LayoutComponentBase

<MudThemeProvider Theme="_customTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<PageTitle>Innkeep Client</PageTitle>

<MudLayout>
    <div class="main">
        <div class="main-page">
            <NavBar/>
            <div class="content">
                @Body
            </div>
        </div>
    </div>
</MudLayout>

@code {

    MudTheme _customTheme = new MudTheme()
    {
        Palette = new PaletteLight()
        {
            Success = new MudColor("#4CD9C0"),
            Error = new MudColor("#FF8989"),
            Primary = new MudColor("#2E6171"),
            Background = new MudColor("#ffffff"),
            Secondary = new MudColor("#D90368")
        }
    };

}