@using Innkeep.Server.Data.Models
<MudDialog class="pa-3">
    <DialogContent>
        <MudForm Model="@Register" @ref="_form">
            <MudTextField 
                @bind-Value="Register.DeviceId"
                ReadOnly="true"
                Label="Device Id"/>
            <MudTextField
                @bind-Value="Register.RegisterName"
                Label="Name"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Ok">Commit</MudButton>
        <MudButton Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {

    MudForm _form;
    
    private void Ok()
    {
        if(_form.IsValid)
            MudDialog.Close(DialogResult.Ok(Register));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
    
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Register Register { get; set; }

}