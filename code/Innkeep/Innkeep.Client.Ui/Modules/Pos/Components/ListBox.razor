<MudPaper Class="flex-grow-1" Square="true" Elevation="1">
    <MudStack Class="h-100 w-100" Spacing="0">
        <MudStack Justify="Justify.Center" Class="p-2 m-0 mud-theme-primary">
            <MudText Typo="Typo.h5">@Title</MudText>
        </MudStack>
        @ChildContent
    </MudStack>
</MudPaper>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Title { get; set; } = string.Empty;

}