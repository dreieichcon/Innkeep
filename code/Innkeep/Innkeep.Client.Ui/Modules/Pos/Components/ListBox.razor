<MudPaper Class="flex-grow-1">
    <MudStack Class="h-100 w-100">
        <MudStack Justify="Justify.Center" Class="p-2">
            <MudText>@Title</MudText>
            <MudDivider Style="height: 1px;" Class="w-100"/>
        </MudStack>
        @ChildContent
    </MudStack>
</MudPaper>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Title { get; set; } = string.Empty;

}