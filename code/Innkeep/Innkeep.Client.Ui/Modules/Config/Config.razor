@page "/config"

<MudPaper Class="flex-grow-1">
    <MudStack Class="flex-grow-1">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText>Connect to Server</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudStack Row="true">
                    <MudTextField T="string" @bind-Value="@CurrentConfig.ServerAddress" Variant="Variant.Outlined" Label="Server Address"/>
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary">Auto Discover</MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary" @onclick="Test">Test</MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Success">Connect</MudButton>
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudStack>
</MudPaper>

